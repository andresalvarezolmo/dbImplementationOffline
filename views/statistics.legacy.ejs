<%- include("./partials/head") %>
<%- include("./partials/navigation", {ses: ses}) %>

<main>

  <div class="jumbotron">

    <h1>Statistics</h1>
    <hr class="my-4">
    <% if (ses.position === 'Manager') { %>
    <h2>Branch ...</h2>
    <% } %>

    <!--Section: Main panel-->
    <section class="card card-cascade narrower mb-5">

      <!--Grid row-->
      <div class="row">
        <div class="col-md-3 text-center">

          <!--Panel Header-->
          <div class="view view-cascade py-3 gradient-card-header info-color-dark">
            <h5 class="mb-0">Revenue</h5>
          </div>
          <!--/Panel Header-->


          <% if (ses.position === 'Director') { %>

          <div class="view view-cascade py-3 gradient-card-header info-color-light">

            <h6> Choose Branch </h6>

            <!-- Option 1-->
            <div class="custom-control custom-radio custom-control-inline">
              <input type="radio" class="custom-control-input" id="defaultInline1" name="inlineDefaultRadiosExample">
              <label class="custom-control-label" for="defaultInline1">1</label>
            </div>

            <!-- Option 2-->
            <div class="custom-control custom-radio custom-control-inline">
              <input type="radio" class="custom-control-input" id="defaultInline2" name="inlineDefaultRadiosExample">
              <label class="custom-control-label" for="defaultInline2">2</label>
            </div>

            <!-- Option 3-->
            <div class="custom-control custom-radio custom-control-inline">
              <input type="radio" class="custom-control-input" id="defaultInline3" name="inlineDefaultRadiosExample">
              <label class="custom-control-label" for="defaultInline3">3</label>
            </div>

            <!-- Option ALL-->
            <div class="custom-control custom-radio custom-control-inline">
              <input type="radio" class="custom-control-input" id="defaultInline4" name="inlineDefaultRadiosExample">
              <label class="custom-control-label" for="defaultInline4">All</label>
            </div>
          </div>
          <% } %>



          <!--Panel content-->
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-4">

                <!--Date select-->
                <p class="lead">
                  <span class="badge info-color-dark p-2">Date range</span>
                </p>
                <select class="mdb-select colorful-select dropdown-info">
                  <option value="" disabled>Choose time period</option>
                  <option value="1">Last 7 days</option>
                  <option value="2">last 30 days</option>
                  <option value="3">Last 3 months</option>
                  <option value="4">Last 6 months</option>
                  <option value="5">Last 12 months</option>
                  <option value="6">Last 3 years</option>
                </select>
              </div>
            </div>

            <hr class="my-4">
            <!--Date select-->
            <div class="row">
              <div class="col-lg-6 text-center">
                <p>Avg revenue:
                  <strong>100$</strong>
                  <button type="button" class="btn btn-info btn-sm p-2" data-toggle="tooltip" data-placement="top" title="Average revenue in the given period">
                    <i class="fa fa-question"></i>
                  </button>
                </p>
              </div>
              <div class="col-lg-6 text-center">
                <p>Total revenue:
                  <strong>2000$</strong>
                  <button type="button" class="btn btn-info btn-sm p-2" data-toggle="tooltip" data-placement="top" title="Total revenue in the given period">
                    <i class="fa fa-question"></i>
                  </button>
                </p>
              </div>
            </div>

            <!--Date select-->
            <div class="row">
              <div class="col-lg-6 text-center">
                <p>Total earnings:
                  <strong>100$</strong>
                  <button type="button" class="btn btn-info btn-sm p-2" data-toggle="tooltip" data-placement="top" title="Total earnings in the given period">
                    <i class="fa fa-question"></i>
                  </button>
                </p>
              </div>
              <div class="col-lg-6 text-center">
                <p>Total costs:
                  <strong>2000$</strong>
                  <button type="button" class="btn btn-info btn-sm p-2" data-toggle="tooltip" data-placement="top" title="Total cost in the given period">
                    <i class="fa fa-question"></i>
                  </button>
                </p>
              </div>
            </div>
          </div>
        </div>
        <!--Graph-->
        <div class="col-md-9 align-self-center">
          <div class="text-center">
            <canvas id="myChart"></canvas>
          </div>
        </div>
      </div>
    </section>
    <!-- End Revenue panel-->


  <section class="mb-5">
    <div class="md-accordion accordion" id="accordionEx" role="tablist" aria-multiselectable="true">
      <div class="card">

        <!-- Card header -->
        <div class="card-header" role="tab" id="headingOne">

          <!-- Heading -->
          <a id="folder-1" data-toggle="collapse" data-parent="#accordionEx" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            <h5 class="mt-1 mb-0">
              <span>Staff info</span>
              <i class="fas fa-angle-down rotate-icon"></i>
            </h5>
          </a>

        </div>

        <!-- Card body -->
        <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne">
          <div class="card-body">

            <!-- add Staff info -->
            <div class="row">
              <div class="col">
                <!-- tale with numbers -->
                <table class="table table-bordered">
                  <tbody>
                    <tr>
                      <td>Managers</td>
                      <td id="staffinfo_td_managers"></td>
                    </tr>
                    <tr>
                      <td>Chefs</td>
                      <td id="staffinfo_td_chefs"></td>
                    </tr>
                    <tr>
                      <th>Waiters</th>
                      <td id="staffinfo_td_waiters">140</td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div class="col">
                <!-- charts -->
                <div class="text-center">
                  <canvas id="labelChart"></canvas>
                </div>


              </div>

            </div>



          </div>
        </div>
      </div>
      <!-- Accordion END -->

      <!-- Accordion card -->
      <div class="card">

        <!-- Card header -->
        <div class="card-header" role="tab" id="headingTwo">

          <!-- Heading -->
          <a id="folder-2" data-toggle="collapse" data-parent="#accordionEx" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
            <h5 class="mt-1 mb-0">
              <span>Orders details</span>
              <i class="fas fa-angle-down rotate-icon"></i>
            </h5>
          </a>

        </div>

        <!-- Card body -->
        <div id="collapseTwo" class="collapse show" role="tabpanel" aria-labelledby="headingTwo">
          <div class="card-body">

            <!-- add Order info -->

            <!--Grid row-->
            <div class="row">

              <!--Grid column-->
              <div class="col-md-6 mb-4">

                <!--Date select-->
                <p class="lead">
                  <span class="badge info-color-dark p-2">Date range</span>
                </p>
                <select class="mdb-select colorful-select dropdown-info">
                  <option value="" disabled>Choose time period</option>
                  <option value="1">Last 7 days</option>
                  <option value="2">last 30 days</option>
                  <option value="3">Last 3 months</option>
                  <option value="4">Last 6 months</option>
                  <option value="5">Last 12 months</option>
                  <option value="6">Last 3 years</option>
                </select>
              </div>
            </div>

            <div class="text-center">
              <canvas id="ordersChart" style="max-width: 500px;"></canvas>
            </div>


          </div>
        </div>
      </div>
      <!-- Accordion END -->




    </div>
    <!--/.Accordion wrapper-->
  </section>
  <!--Section: Accordion-->

  <script src="js/statistics.js"></script>

  </div>
</main>

<%- include("partials/footer") %>
